<?xml version="1.0"?>
<sdf version="1.11">
  <model name="mechaship" canonical_link='base_footprint'>
    <static>false</static>

    <!-- Robot base footprint -->
    <link name="base_footprint" />

    <!-- Robot base -->
    <joint name="base_joint" type="fixed">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_footprint</parent>
      <child>base_link</child>
    </joint>

    <link name="base_link">
      <pose>0 0 0 0 0 0</pose>
      <enable_wind>true</enable_wind>
      <inertial>
        <pose>0 0 0 0 0 0</pose>
        <mass>5.0</mass>
        <inertia>
          <ixx>0.02</ixx>
          <iyy>0.16</iyy>
          <izz>0.17</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>
      <collision name="base_top_collision">
        <pose>0 0 0.135 0 0 0</pose>
        <geometry>
          <box>
            <size>0.4 0.17 0.055</size>
          </box>
        </geometry>
      </collision>
      <collision name="base_left_collision">
        <pose>0.025 0.11 0.045 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.65</length>
          </cylinder>
        </geometry>
      </collision>
      <collision name="base_right_collision">
        <pose>0.025 -0.11 0.045 0 1.5708 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.65</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="base_visual">
        <geometry>
          <mesh>
            <scale>0.001 0.001 0.001</scale>
            <uri>package://mechaship_description/models/mechaship/meshes/body.stl</uri>
          </mesh>
        </geometry>
        <!-- Dark Color -->
        <material>
          <ambient>0.3 0.3 0.3 1.0</ambient>
          <diffuse>0.3 0.3 0.3 1.0</diffuse>
          <specular>0.3 0.3 0.3 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
      </visual>
    </link>

    <!-- GPS -->
    <joint name="gps_joint" type="fixed">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>gps_link</child>
    </joint>

    <link name="gps_link">
      <sensor name="mechaship_gps" type="navsat">
        <always_on>true</always_on>
        <update_rate>1</update_rate>
        <visualize>true</visualize>
        <topic>gps/fix</topic>
        <gz_frame_id>gps_link</gz_frame_id>
        <navsat>
          <position_sensing>
            <horizontal>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.0</stddev>
              </noise>
            </horizontal>
            <vertical>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.0</stddev>
              </noise>
            </vertical>
          </position_sensing>
          <velocity_sensing>
            <horizontal>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.0</stddev>
              </noise>
            </horizontal>
            <vertical>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>1.0</stddev>
              </noise>
            </vertical>
          </velocity_sensing>
        </navsat>
      </sensor>
    </link>

    <!-- IMU -->
    <joint name="imu_joint" type="fixed">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>imu_link</child>
    </joint>

    <link name="imu_link">
      <sensor name="mechaship_imu" type="imu">
        <always_on>true</always_on>
        <update_rate>33</update_rate>
        <visualize>true</visualize>
        <topic>imu</topic>
        <gz_frame_id>imu_link</gz_frame_id>
        <imu>
          <angular_velocity>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.0005</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.0005</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.0005</stddev>
              </noise>
            </z>
          </angular_velocity>
          <linear_acceleration>
            <x>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.015</stddev>
              </noise>
            </x>
            <y>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.015</stddev>
              </noise>
            </y>
            <z>
              <noise type="gaussian">
                <mean>0.0</mean>
                <stddev>0.015</stddev>
              </noise>
            </z>
          </linear_acceleration>
        </imu>
      </sensor>
    </link>

    <!-- LiDAR -->
    <joint name="scan_joint" type="fixed">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>base_scan</child>
    </joint>

    <link name="base_scan">
      <pose relative_to="base_link">-0.072 0 0.207947 0 0 0</pose>
      <inertial>
        <pose>-0.015 0 -0.018 0 0 0</pose>
        <mass>0.14</mass>
        <inertia>
          <ixx>2.1e-4</ixx>
          <iyy>2.1e-4</iyy>
          <izz>1.7e-4</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <pose>-0.015 0 -0.018 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.05</radius>
            <length>0.06</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="scan_visual">
        <pose>0 0 -0.022 0 0 0</pose>
        <geometry>
          <mesh>
            <uri>package://mechaship_description/models/mechaship/meshes/ydlidar_x4.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <!-- White Color -->
        <material>
          <ambient>1.0 1.0 1.0 1.0</ambient>
          <diffuse>1.0 1.0 1.0 1.0</diffuse>
          <specular>1.0 1.0 1.0 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
      </visual>
      <sensor name="mechaship_lidar" type="gpu_lidar">
        <always_on>true</always_on>
        <update_rate>7</update_rate>
        <visualize>true</visualize>
        <topic>scan</topic>
        <gz_frame_id>base_scan</gz_frame_id>
        <pose>0 0 0 0 0 0</pose>
        <lidar>
          <scan>
            <horizontal>
              <samples>512</samples>
              <resolution>1.0</resolution>
              <min_angle>-3.14</min_angle>
              <max_angle>3.14</max_angle>
            </horizontal>
          </scan>
          <range>
            <min>0.05</min>
            <max>15.0</max>
            <resolution>0.01</resolution>
          </range>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.01</stddev>
          </noise>
        </lidar>
      </sensor>
    </link>

    <!-- Camera -->
    <joint name="camera_joint" type="fixed">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>camera_link</child>
    </joint>

    <link name="camera_link">
      <pose relative_to="base_link">0.222 0 0.145 0 1.5708 0</pose>
      <inertial>
        <mass>0.162</mass>
        <inertia>
          <ixx>2.98e-05</ixx>
          <iyy>1.38e-05</iyy>
          <izz>3.78e-05</izz>
          <ixy>0.0</ixy>
          <ixz>0.0</ixz>
          <iyz>0.0</iyz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <pose>0 0 0 0 0 0</pose>
        <geometry>
          <box>
            <size>0.029 0.094 0.024</size>
          </box>
        </geometry>
      </collision>
      <visual name="camera_visual">
        <pose>0 0 0 -1.5708 -1.5708 0</pose>
        <geometry>
          <mesh>
            <uri>package://mechaship_description/models/mechaship/meshes/rpi_camera_v2.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <!-- White Color -->
        <material>
          <ambient>1.0 1.0 1.0 1.0</ambient>
          <diffuse>1.0 1.0 1.0 1.0</diffuse>
          <specular>1.0 1.0 1.0 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
      </visual>
      <sensor name="mechaship_camera" type="camera">
        <always_on>true</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>image_raw</topic>
        <gz_frame_id>camera_link</gz_frame_id>
        <pose>0 0 0 0 -1.5708 0</pose>
        <camera>
          <camera_info_topic>camera_info</camera_info_topic>
          <optical_frame_id>camera_link</optical_frame_id>
          <horizontal_fov>1.22</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>100.0</far>
          </clip>
          <noise>
            <type>gaussian</type>
            <mean>0.0</mean>
            <stddev>0.007</stddev>
          </noise>
        </camera>
      </sensor>
    </link>

    <!-- Thruster -->
    <joint name="thruster_joint" type="revolute">
      <pose>0 0 0 0 0 0</pose>
      <parent>base_link</parent>
      <child>thruster_link</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>1.0472</lower>
          <upper>2.0944</upper>
          <effort>1.0</effort>
          <velocity>1.0</velocity>
        </limit>
      </axis>
    </joint>

    <link name="thruster_link">
      <pose relative_to="base_link">-0.25 0 0 0 0 0</pose>
      <inertial>
        <pose>0 0 0.093 0 0 0</pose>
        <mass>0.5</mass>
        <inertia>
          <ixx>0.0006</ixx>
          <iyy>0.0006</iyy>
          <izz>0.00001</izz>
        </inertia>
      </inertial>
      <collision name="thruster_collision">
        <pose>0 0 0.093 0 0 0</pose>
        <geometry>
          <cylinder>
            <radius>0.005</radius>
            <length>0.12</length>
          </cylinder>
        </geometry>
      </collision>
      <visual name="thruster_visual">
        <pose>0 0 0.03 0 0 1.5708</pose>
        <geometry>
          <mesh>
            <uri>package://mechaship_description/models/mechaship/meshes/thruster.stl</uri>
            <scale>0.001 0.001 0.001</scale>
          </mesh>
        </geometry>
        <!-- White Color -->
        <material>
          <ambient>1.0 1.0 1.0 1.0</ambient>
          <diffuse>1.0 1.0 1.0 1.0</diffuse>
          <specular>1.0 1.0 1.0 1.0</specular>
          <emissive>0.0 0.0 0.0 1.0</emissive>
        </material>
      </visual>
    </link>

    <joint name="propeller_joint" type="revolute">
      <pose relative_to="thruster_link">0 0 0 0 0 0</pose>
      <parent>thruster_link</parent>
      <child>propeller_link</child>
      <axis>
        <xyz>0 -1 0</xyz>
        <limit>
          <lower>-1000</lower>
          <upper>1000</upper>
          <effort>10</effort>
          <velocity>100</velocity>
        </limit>
        <dynamics>
          <damping>0.1</damping>
        </dynamics>
      </axis>
    </joint>

    <link name="propeller_link">
      <pose relative_to="thruster_link">0 0 0 0 0 0</pose>
      <inertial>
        <mass>0.178</mass>
        <inertia>
          <ixx>0.00029</ixx>
          <iyy>0.00029</iyy>
          <izz>0.00013</izz>
        </inertia>
      </inertial>
      <collision name="propeller_collision">
        <pose>0 0 -0.005 0 1.6 1.5708</pose>
        <geometry>
          <cylinder>
            <radius>0.04</radius>
            <length>0.055</length>
          </cylinder>
        </geometry>
      </collision>
    </link>

    <!-- Joint Position Controller -->
    <plugin filename="gz-sim-joint-position-controller-system"
      name="gz::sim::systems::JointPositionController">
      <joint_name>thruster_joint</joint_name>
      <use_actuator_msg>false</use_actuator_msg>
      <cmd_max>3.1415</cmd_max>
      <use_velocity_commands>true</use_velocity_commands>
      <topic>actuator/key/degree</topic>
      <initial_position>1.5708</initial_position>
    </plugin>

    <!-- Thruster -->
    <plugin filename="gz-sim-thruster-system"
      name="gz::sim::systems::Thruster">
      <namespace />
      <topic>actuator/thruster/percentage</topic>
      <joint_name>propeller_joint</joint_name>
      <fluid_density>1000</fluid_density>
      <propeller_diameter>0.07</propeller_diameter>
      <thrust_coefficient>0.001</thrust_coefficient>
      <velocity_control>true</velocity_control>
      <max_thrust_cmd>100</max_thrust_cmd>
      <min_thrust_cmd>-100</min_thrust_cmd>
    </plugin>

    <!-- Joint state publisher -->
    <plugin filename="gz-sim-joint-state-publisher-system"
      name="gz::sim::systems::JointStatePublisher">
      <topic>joint_states</topic>
      <joint_name>thruster_joint</joint_name>
      <joint_name>propeller_joint</joint_name>
    </plugin>

    <!-- Left hull -->
    <plugin filename="libSurface.so" name="vrx::Surface">
      <link_name>base_link</link_name>
      <hull_length>0.8</hull_length>
      <hull_radius>0.1</hull_radius>
      <fluid_level>0</fluid_level>
      <points>
        <point>0.35 0.11 0</point>
        <point>-0.35 0.11 0</point>
      </points>
      <wavefield>
        <topic>/vrx/wavefield/parameters</topic>
      </wavefield>
    </plugin>

    <!-- Right hull -->
    <plugin filename="libSurface.so" name="vrx::Surface">
      <link_name>base_link</link_name>
      <hull_length>0.8</hull_length>
      <hull_radius>0.1</hull_radius>
      <fluid_level>0</fluid_level>
      <points>
        <point>0.35 -0.11 0</point>
        <point>-0.35 -0.11 0</point>
      </points>
      <wavefield>
        <topic>/vrx/wavefield/parameters</topic>
      </wavefield>
    </plugin>

    <!-- 수력 플러그인 -->
    <plugin filename="libSimpleHydrodynamics.so"
      name="vrx::SimpleHydrodynamics">
      <link_name>base_link</link_name>
      <!-- Added mass -->
      <xDotU>8.0</xDotU>
      <yDotV>4.0</yDotV>
      <nDotR>2.0</nDotR>
      <!-- Linear and quadratic drag -->
      <xU>4.0</xU>
      <xUU>12.0</xUU>
      <yV>8.0</yV>
      <yVV>20.0</yVV>
      <zW>50.0</zW>
      <kP>10.0</kP>
      <kPP>20.0</kPP>
      <mQ>20.0</mQ>
      <mQQ>30.0</mQQ>
      <nR>4.0</nR>
      <nRR>12.0</nRR>
    </plugin>

  </model>
</sdf>